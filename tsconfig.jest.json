{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "jsx": "react",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["node_modules/@types", "src/types"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx"]
  }
  